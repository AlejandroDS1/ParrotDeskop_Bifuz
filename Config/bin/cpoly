#!/bin/bash

function bye {

	notify-send -t 2500 "Polybar changed! "
	echo "PolyBar changed Successfully!" 
}


function info {

	echo "It is not a valid argument!"
	echo ""
	echo "cpoly [VERSION]" 

	echo "VERSIONS"
	echo "1.- Bifuz configuration default polybar"
	echo "2.- S4vitar polybar to HackTheBox"
	echo ""
}

if [ $# -eq 0 ]; then
	info
	exit 1
fi

case $1 in

  1)

	(~/.config/polybar/my_launch.sh &>/dev/null &)	
    ;;

  2)
	(~/.config/polybar/launch.sh &>/dev/null &)	
    ;;

  *)
	info
	exit 1
    ;;
esac

